#include <iostream>

using namespace std;

int main()
{
   int num;
   cout << "Ingrese un número: ";
   cin >> num;
   if(num < 0){
   cout << "El número es negativo" << endl;
   } else if(num == 0) {
   cout << "El número es cero" << endl;
   } else if(num > 0) {
   cout << "El número es positivo" << endl;
   }
   
    return 0;
}
